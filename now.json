{
  "version": 2,
  "alias": ["stats.lowmess.com", "lowmess-stats.now.sh"],
  "builds": [
    {
      "src": "graphql/index.ts",
      "use": "@now/node"
    },
    {
      "src": "public/*",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/graphql",
      "headers": { "Cache-Control": "s-maxage=3600" },
      "dest": "/graphql/index.ts"
    },
    {
      "src": "/(.*)",
      "headers": { "Cache-Control": "s-maxage=86400" },
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "ENGINE_API_KEY": "@apollo_key",
    "FOURSQUARE_KEY": "@foursquare_key",
    "GITHUB_KEY": "@github_key",
    "GOODREADS_KEY": "@goodreads_key",
    "GOODREADS_ID": "@goodreads_id",
    "LASTFM_KEY": "@lastfm_key",
    "LASTFM_USERNAME": "@lastfm_username",
    "TWITTER_KEY": "@twitter_key",
    "WITHINGS_KEY": "@withings_key",
    "WITHINGS_REFRESH_KEY": "@withings_refresh_key",
    "WITHINGS_CLIENT_ID": "@withings_client_id",
    "WITHINGS_CLIENT_SECRET": "@withings_client_secret"
  }
}
